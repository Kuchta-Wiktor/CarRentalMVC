@model CarRentalMVC.Data.Rental

@{
    ViewData["Title"] = "Details";
}

<h1>Detlae</h1>

<div>
    <h4>Wypożyczenie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Car)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Car.Make) @Html.DisplayFor(model => model.Car.Model)
        </dd>
        <dt class = "col-sm-2">
            Wypożyczający
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RenterName)
        </dd>
        <dt class = "col-sm-2">
            Data wypożyczenia
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RentalDate)
        </dd>
        <dt class = "col-sm-2">
            Data zwrotu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReturnDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edytuj</a> |
    <a asp-action="Index">Powrót</a>
</div>
