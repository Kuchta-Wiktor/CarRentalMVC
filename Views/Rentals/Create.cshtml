@model CarRentalMVC.Data.Rental

@{
    ViewData["Title"] = "Create";
}

<h1>Stwórz</h1>

<h4>Wypożyczenie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CarId" class="control-label">Marka i model</label>
                <select asp-for="CarId" class ="form-control" asp-items="ViewBag.CarId"></select>
            </div>
            <div class="form-group">
                <label asp-for="RenterName" class="control-label">Wypożyczający</label>
                <input asp-for="RenterName" class="form-control" />
                <span asp-validation-for="RenterName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentalDate" class="control-label">Data wypożyczenia</label>
                <input asp-for="RentalDate" class="form-control" />
                <span asp-validation-for="RentalDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReturnDate" class="control-label">Data zwrotu</label>
                <input asp-for="ReturnDate" class="form-control" />
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Stwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>   
    <a asp-action="Index">Powrót</a>
</div>

