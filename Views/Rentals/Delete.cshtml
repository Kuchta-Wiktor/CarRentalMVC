@model CarRentalMVC.Data.Rental

@{
    ViewData["Title"] = "Delete";
}

<h1>Usuń</h1>

<h3>Jesteś pewien usunięcia?</h3>
<div>
    <h4>Wypożyczenie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Model i marka
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Car.Make) @Html.DisplayFor(model => model.Car.Model)
        </dd>
        <dt class = "col-sm-2">
            Wypożyczający
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RenterName)
        </dd>
        <dt class = "col-sm-2">
            Data wypożyczenia
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RentalDate)
        </dd>
        <dt class = "col-sm-2">
            Data zwrotu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReturnDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Powrót</a>
    </form>
</div>
